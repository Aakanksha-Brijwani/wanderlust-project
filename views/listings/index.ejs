        <div class="filter">
       <div><i class="fa-solid fa-person-swimming"></i></div>
       <p> Amazing pools</p>
      </div>

        <div class="filter">
       <div><i class="fa-solid fa-campground"></i></div>
       <p>Camping</p>
      </div>
     
      <div class="filter">
       <div><i class="fa-solid fa-cow"></i></i></div>
       <p> Farms </p>
      </div>

        <div class="filter">
       <div><i class="fa-regular fa-snowflake"></i></div>
